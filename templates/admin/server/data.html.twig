{% set view = ea.crud.currentPage %}
{% set value = field.value %}

{% if view == 'index' %}
    {% for app, info in value %}
        {% if value[app]['version']|default(false) %}
            <span class="label label-primary">{{ app }} {{ value[app]['version']|default('–') }}</span>
        {% endif %}
    {% endfor %}

{% elseif view == 'detail' %}
    <table class="table">
        {% for app, info in value %}
            <tr>
                {% if value[app]['version']|default(false) %}
                    <th>{{ app }}</th>
                    <td>{{ value[app]['version']|default('–') }}</td>
                {% endif %}
            </tr>
        {% endfor %}
    </table>
{% endif %}
